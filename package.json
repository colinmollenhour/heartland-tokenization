{
  "name": "heartland-tokenization",
  "version": "1.0.0",
  "description": "This plugin allows you to use your SecureSubmit Public API Key to convert a credit card into a secure Token which can be charged in a PCI friendly way.",
  "main": "dist/securesubmit.min.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run clean && npm run build:browser && npm run test:lint && npm run build:assets",
    "build:assets": "cp src/assets/* dist && node bin/replace-securesubmit-ref.js",
    "build:browser": "rollup -c rollup.config.browser.js && rollup -c rollup.config.browser.min.js",
    "clean": "rimraf dist",
    "install": "npm run build",
    "test": "phantomjs --web-security=false node_modules/mocha-phantomjs-core/mocha-phantomjs-core.js test/index.html dot",
    "test:lint": "tslint -t verbose -c tslint.json src/*.ts src/Formatter/*.ts src/Validator/*.ts src/types/*.ts src/vars/*.ts",
    "test:jsdom": "mocha test/**/*.test.js",
    "watch": "rollup --watch -c rollup.config.browser.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hps/heartland-tokenization.git"
  },
  "keywords": [
    "hps",
    "heartland",
    "payment",
    "systems",
    "tokenization",
    "credit",
    "card"
  ],
  "author": "Heartland Payment Systems",
  "license": "Custom",
  "bugs": {
    "url": "https://github.com/hps/heartland-tokenization/issues"
  },
  "homepage": "https://github.com/hps/heartland-tokenization#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "jsdom": "^9.4.2",
    "mocha": "^3.0.2",
    "mocha-phantomjs-core": "^1.3.1",
    "phantomjs-prebuilt": "^2.1.12",
    "rimraf": "^2.5.4",
    "rollup": "^0.34.11",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^1.0.1",
    "tslint": "^2.5.0",
    "typescript": "^1.6.2"
  }
}
