{
  "name": "heartland-tokenization",
  "version": "1.0.0",
  "description": "This plugin allows you to use your SecureSubmit Public API Key to convert a credit card into a secure Token which can be charged in a PCI friendly way.",
  "main": "dist/securesubmit.min.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run clean && npm run build-ts && npm run lint && npm run minify && npm run cp-html",
    "build-ts": "tsc",
    "clean": "rm -rf dist",
    "cp-html": "cp src/field.html src/button.html src/index.html dist",
    "lint": "tslint -t verbose -c tslint.json src/*.ts src/Formatter/*.ts src/Validator/*.ts src/types/*.ts src/vars/*.ts",
    "minify": "uglifyjs -c -m -o dist/securesubmit.min.js --source-map-root ./src  --source-map-url /dist/securesubmit.min.js.map --source-map dist/securesubmit.min.js.map --in-source-map dist/securesubmit.js.map -- dist/securesubmit.js",
    "install": "npm run build",
    "test": "phantomjs --web-security=false node_modules/mocha-phantomjs-core/mocha-phantomjs-core.js test/index.html dot",
    "test:jsdom": "mocha test/**/*.test.js",
    "watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hps/heartland-tokenization.git"
  },
  "keywords": [
    "hps",
    "heartland",
    "payment",
    "systems",
    "tokenization",
    "credit",
    "card"
  ],
  "author": "Heartland Payment Systems",
  "license": "Custom",
  "bugs": {
    "url": "https://github.com/hps/heartland-tokenization/issues"
  },
  "homepage": "https://github.com/hps/heartland-tokenization#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "jsdom": "^9.4.2",
    "mocha": "^3.0.2",
    "mocha-phantomjs-core": "^1.3.1",
    "phantomjs-prebuilt": "^2.1.12",
    "tslint": "^2.5.0",
    "typescript": "^1.6.2",
    "uglify-js": "^2.4.24"
  }
}
